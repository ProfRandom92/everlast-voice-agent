# Environment Configuration
# Everlast Voice Agent
# Copy to .env and fill in your values

# =============================================================================
# VAPI CONFIGURATION
# =============================================================================
VAPI_API_KEY=sk_your_vapi_key_here
VAPI_ASSISTANT_ID=asst_your_assistant_id
VAPI_SERVER_SECRET=your_webhook_secret

# =============================================================================
# ANTHROPIC / CLAUDE
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key

# =============================================================================
# SUPABASE (EU Region Frankfurt)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJ...your_service_key
SUPABASE_ANON_KEY=eyJ...your_anon_key

# =============================================================================
# CALENDLY
# =============================================================================
# API Key - Get from Calendly Integrations > API & Webhooks
CALENDLY_API_KEY=eyJ...your_calendly_token

# User URI - Get from https://api.calendly.com/users/me or Calendly dashboard
CALENDLY_USER_URI=https://api.calendly.com/users/YOUR_USER_ID

# Event Type URI - The specific event type for voice agent bookings
# Get from: https://api.calendly.com/event_types or Calendly dashboard > Event Types
CALENDLY_EVENT_TYPE_URI=https://api.calendly.com/event_types/YOUR_EVENT_TYPE

# Default timezone for bookings (optional, defaults to Europe/Berlin)
CALENDLY_DEFAULT_TIMEZONE=Europe/Berlin

# Booking settings
CALENDLY_AUTO_CONFIRM=true
CALENDLY_SEND_SMS_REMINDER=true

# =============================================================================
# ELEVENLABS (Optional - for custom voice)
# =============================================================================
ELEVENLABS_API_KEY=sk_your_elevenlabs_key

# =============================================================================
# APPLICATION CONFIG
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info
PORT=8000

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your_random_secret_key_here_min_32_chars
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# REDIS (Optional - for production state management)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
